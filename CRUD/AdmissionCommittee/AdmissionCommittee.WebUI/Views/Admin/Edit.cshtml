    </div>

    <div class="en-card mdl-shadow--2dp">
        <div class="en-header_middle">Specialties</div>
        <table class="mdl-data-table en-full_width">
            <tr>
                <th>Priority</th>
                <th class="mdl-data-table__cell--non-numeric">Place</th>
                <th class="mdl-data-table__cell--non-numeric">Speciality</th>
                <th class="mdl-data-table__cell--non-numeric">Form</th>
                <th class="mdl-data-table__cell--non-numeric">Qualiphication</th>
            </tr>
            @if (Model.Enrollee.Applications[0].Specialities.Count() == 0)
                {
                <tr>
                    <td colspan="4" class="mdl-data-table__cell--non-numeric ">
                        Specialities not selected
                    </td>
                </tr>
            }
            else
            {
                for (int i = 0; i < Model.Enrollee.Applications[0].Specialities.Count; i++)
                {
                    <tr>
                        <td>
                            @(i+1)
                        </td>
                        <td class="mdl-data-table__cell--non-numeric">
                            @Model.Enrollee.Applications[0].Specialities[i].EducationPlace.Name
                        </td>
                        <td class="mdl-data-table__cell--non-numeric">
                            @Model.Enrollee.Applications[0].Specialities[i].NCSQSpeciality.Name
                        </td>
                        <td class="mdl-data-table__cell--non-numeric">
                            @Model.Enrollee.Applications[0].Specialities[i].EducationForm.Name
                        </td>
                        <td class="mdl-data-table__cell--non-numeric">
                            @Model.Enrollee.Applications[0].Specialities[i].NCSQSpeciality.Qualification
                        </td>
                    </tr>
                }
            }
        </table>
        <div class="en-card_content">
            @Html.ActionLink("Edit application", "Application", new { enrolleeId = Model.Enrollee.EnrolleeId, applicationId = Model.Enrollee.Applications[0].ApplicationId }, new { @class = "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--primary" })
        </div>
    </div>

    <div class="en-card mdl-shadow--2dp">
        <div class="en-card_content">
            <input type="submit" value="Save" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" />
            @Html.ActionLink("Cancel and return to List", "Index", null, new { @class = "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--primary" })
        </div>      
    </div>
