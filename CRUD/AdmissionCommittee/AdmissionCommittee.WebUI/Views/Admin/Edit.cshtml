                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.TextBoxFor(m => m.Enrollee.Address.City, null, new { @class = "mdl-textfield__input", @id = "city", @pattern = "(\\D)+" })
                    <label class="mdl-textfield__label" for="city">City</label>
                    <span class="mdl-textfield__error">Please enter city!</span>
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.TextBoxFor(m => m.Enrollee.Address.Street, null, new { @class = "mdl-textfield__input", @id = "street", @pattern = "(\\D)+" })
                    <label class="mdl-textfield__label" for="street">Street</label>
                    <span class="mdl-textfield__error">Please enter street!</span>
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.TextBoxFor(m => m.Enrollee.Address.BuildingNumber, null, new { @class = "mdl-textfield__input", @id = "buildnum", @pattern = "\\d+(\\w)*" })
                    <label class="mdl-textfield__label" for="buildnum">Building number</label>
                    <span class="mdl-textfield__error">Please enter building number!</span>
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.TextBoxFor(m => m.Enrollee.Address.ApartmentNumber, null, new { @class = "mdl-textfield__input", @id = "apartnum", @pattern = "\\d*" })
                    <label class="mdl-textfield__label" for="apartnum">Apartment number</label>
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.TextBoxFor(m => m.Enrollee.Address.PostalCode, null, new { @class = "mdl-textfield__input", @id = "postal", @pattern = "\\d{6}" })
