@using AdmissionCommittee.Domain.Entities
@model IList<Speciality>

<table class="mdl-data-table en-full_width">
    @if (Model.Count() == 0)
    {
        <tr>
            <td class="mdl-data-table__cell--non-numeric ">
                Specialties not found
            </td>
        </tr>
    }
    else
    {
        for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td class="mdl-data-table__cell--non-numeric en-table_td_speciality">
                    <div class="en-text_overflow">
                        <div>@Model[i].NCSQSpeciality.Cipher</div>
                        <div>@Model[i].NCSQSpeciality.Name</div>
                    </div>
                </td>
                <td class="mdl-data-table__cell--non-numeric en-table_td_qualification">
                    @Model[i].NCSQSpeciality.Qualification
                </td>
                <td class="mdl-data-table__cell--non-numeric en-table_td_form">
                    @Model[i].EducationForm.Name
                </td>
                <td class="mdl-data-table__cell--non-numeric en-table_td_duration">
                    @Model[i].EducationDuration.Duration
                </td>
                <td class="mdl-data-table__cell--non-numeric en-table_td_subjects">
                    <div>
                        @for (int j = 0; j < Model[i].SpecialitySubjects.Count(); j++)
                        {
                            if (Model[i].SpecialitySubjects[j].Priority <= 2)
                            {
                                <div>@Model[i].SpecialitySubjects[j].Subject.Name</div>
                            }
                        }
                    </div>
                </td>
            </tr>
        }
    }
</table>